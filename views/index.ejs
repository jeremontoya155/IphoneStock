<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }
        .table-container {
            max-width: 1000px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="table-container">
            <h1 class="text-center mb-4">Lista de Productos</h1>
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Imagen</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <% if (isAdmin) { %>
                            <th>Acciones</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><img src="<%= product.image %>" alt="<%= product.name %>" style="width: 100px;"></td>
                            <td><%= product.name %></td>
                            <td><%= product.description %></td>
                            <td>$<%= product.price %></td>
                            <td><%= product.stock %></td>
                            <% if (isAdmin) { %>
                                <td>
                                    <a href="/edit/<%= product.id %>" class="btn btn-sm btn-primary">Editar</a>
                                </td>
                            <% } %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <% if (isAdmin) { %>
                <a href="/new" class="btn btn-primary">Agregar nuevo</a>
                <br><br>
            <% } %>
            <a href="/cart" class="btn btn-info">Carrito de Compras</a>
            <a href="/logout" class="btn btn-danger">Cerrar sesión</a>
        </div>
    </div>
</body>
</html>
