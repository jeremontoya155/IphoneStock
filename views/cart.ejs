<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/carts.css">
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
    <script>
        // Funci칩n para verificar si el elemento est치 visible en la pantalla
        function isElementInViewport(el) {
            const rect = el.getBoundingClientRect();
            return (
                rect.top <= (window.innerHeight || document.documentElement.clientHeight) &&
                rect.bottom >= 0
            );
        }

        // Funci칩n para agregar la clase 'visible' a las secciones que est치n en el viewport
        function handleScroll() {
            const sections = document.querySelectorAll('.fade-in-section');
            sections.forEach(section => {
                if (isElementInViewport(section)) {
                    section.classList.add('visible');
                }
            });
        }

        // Escuchar el evento de scroll para activar la animaci칩n
        window.addEventListener('scroll', handleScroll);

        // Ejecutar al cargar la p치gina para detectar secciones visibles al inicio
        window.addEventListener('load', handleScroll);
    </script>
    <style>
        .card-img-top {
            width: 100%;
            height: auto;
        }
    </style>
</head>

<body>
    <!-- Incluir Navbar -->
    <%- include('partials/navbarUser') %>

        <div class="container cart-container ">
            <div class="catalogo-content">
                <h2 class="catalogo-title">CAT츼LOGO</h2>
                <!-- Productos aqu칤 -->
            </div>

            <div class="catalogo-logo">
                <img style="width: 8em;" src="<%= imagenUrl2 %>" alt="">
            </div>

            <div class="sidebar">
                <button class="filters-modal-btn-sidebar">Buscador</button>
            </div>

            <!-- Bot칩n flotante para abrir los filtros en mobile -->
            <div class="filters-modal-btn-phone">游댌</div>

            <!-- Modal de filtros -->
            <div class="filters-modal">
                <div class="filters-modal-content">
                    <h3>Filtrar productos</h3>
                    <!-- Campo de b칰squeda -->
                    <div class="input-group mb-3">
                        <input id="search-input" type="text" class="form-control" placeholder="Buscar productos">
                    </div>
                    <!-- Filtros -->
                    <label for="model-filter">Modelo</label>
                    <select id="model-filter" class="form-control mb-2">
                        <option value="">Todos los modelos</option>
                        <% let uniqueModels=new Set(); products.forEach(product=> {
                            if (product.stock > 0 && !uniqueModels.has(product.name)) {
                            uniqueModels.add(product.name); %>
                            <option value="<%= product.name %>">
                                <%= product.name %>
                            </option>
                            <% } }); %>
                    </select>

                    <label for="estado-filter">Estado</label>
                    <select id="estado-filter" class="form-control mb-2">
                        <option value="">Todos los estados</option>
                        <% let uniqueEstados=new Set(); products.forEach(product=> {
                            if (product.stock > 0 && product.estado) {
                            let estadoUpperCase = product.estado.toUpperCase();
                            if (!uniqueEstados.has(estadoUpperCase)) {
                            uniqueEstados.add(estadoUpperCase); %>
                            <option value="<%= estadoUpperCase %>">
                                <%= estadoUpperCase %>
                            </option>
                            <% } } }); %>
                    </select>

                    <label for="storage-filter">Almacenamiento (GB)</label>
                    <input id="storage-filter" type="number" class="form-control mb-2"
                        placeholder="Almacenamiento m칤nimo (GB)">

                    <label for="battery-filter">Bater칤a m칤nima (%)</label>
                    <input id="battery-filter" type="number" class="form-control mb-2" placeholder="Bater칤a m칤nima (%)">

                    <!-- Botones de acci칩n -->
                    <div class="buttons">
                        <button id="reset-button" class="btn btn-secondary">Resetear</button>
                        <button id="filter-button" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </div>



            <section class="featured-products">
                <div class="products-container row" id="cart-items">
                    <% products.forEach(product=> { %>
                        <% if (product.stock> 0) { %>
                            <%- include('partials/productCard', { product: product }) %>
                                <% } %>
                                    <% }); %>
                </div>
                <!-- Mensaje de "No se encontraron coincidencias" -->
                <div id="no-results-message" class="alert alert-warning" style="display: none;">
                    No se encontraron productos que coincidan con los filtros aplicados.
                </div>

            </section>
        </div>

        <%- include('partials/footer') %>

            <!-- Scripts -->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
            <script src="/js/cart.js"></script>
</body>

</html>