<div class="product-card" data-stock="<%= product.stock %>">
  <div class="product-image-container">
    <img src="<%= product.img %>" alt="<%= product.name %>" class="product-image">
  </div>
  <div class="product-details">
    <h3 class="product-name"> 
      <%= product.name %>
    </h3>
    <strong>

      <p class="price">USD <%= product.price %>
      </p>

    </strong>
    
    <div class="product-footer">
      <div class="battery-status">
        <img src="/imgs/bateria.png" alt="Battery Icon" class="battery-icon">
        <p class="bateria">
          <span class="bateria-num"> 
            <%= product.bateria %> 
          </span>%
        </p>
      </div>
      <button type="button" class="btn-ver-mas-small" data-toggle="modal"
        data-target="#productModal<%= product.id %>">Ver más</button>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="productModal<%= product.id %>" tabindex="-1" role="dialog"
  aria-labelledby="productModalLabel<%= product.id %>" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="productModalLabel<%= product.id %>">
          <%= product.name %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <form action="/buy/<%= product.id %>" method="POST" class="d-inline">
          <button type="submit" class="btn btn-buy">Consultar</button>
        </form>
       
      </div>
      <div class="modal-body">
        <strong><p class="price">$<%= product.price %></strong>
        
        </p>
        <div id="general<%= product.id %>" class="tab-content active">
          <% product.description.split('\n').forEach(function(line) { %>
            <% var parts=line.split(':'); %>
              <% if (parts.length> 1 && parts[1].trim() !== '') { %>
                <p><span>
                    <%= parts[0].trim() %>:
                  </span>
                  <%= parts[1].trim() %>
                </p>
                <% } %>
                  <% }); %>
        </div>
        <div id="tech<%= product.id %>" class="tab-content">
          <!-- Agrega aquí el contenido técnico del producto -->
        </div>
      </div>
     
    </div>
  </div>
</div>